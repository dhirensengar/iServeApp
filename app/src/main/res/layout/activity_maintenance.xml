<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvCondensor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/bg_landing"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="Condensor"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_20sdp" />


        <TextView
            android:id="@+id/tvCompressor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_25sdp"
            android:background="@color/bg_landing"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="Compressor"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_20sdp" />

        <TextView
            android:id="@+id/tvCooler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_25sdp"
            android:background="@color/bg_landing"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="Cooler"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_20sdp" />


        <TextView
            android:id="@+id/tvDataReading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_25sdp"
            android:background="@color/bg_landing"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="Data Reading"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_20sdp" />


        <TextView
            android:id="@+id/tvCustomerSignature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#D3D3D3"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="Customer Signature"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_20sdp" />

    </LinearLayout>


</LinearLayout>
